<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail ticket</h2>
      <% if (!ticket) { %>
      <div class="alert alert-danger fw.bold" role="alert">
        Data ticket tidak ada.<br />
        <a href="/tickets" class="alert-link fw-normal">&laquo; Kembali</a>
      </div>
      <% } else { %>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= ticket.name %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary">
            <%= ticket.nohp %>
          </h6>
          <p class="card-text"><%= ticket.id %></p>
          <a href="/tickets/edit/<%= ticket.name %>" class="btn btn-info badge"
            >Edit</a
          >
          <form action="/tickets?_method=DELETE" method="POST" class="d-inline">
            <input type="hidden" name="name" value="<%= ticket.name %>" />
            <button
              class="btn btn-danger badge"
              type="submit"
              onclick="return confirm('Apakah Anda yakin?')"
            >
              Hapus
            </button>
          </form>
          <a href="/tickets" class="card-link d-block mt-3">&laquo; Kembali.</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
