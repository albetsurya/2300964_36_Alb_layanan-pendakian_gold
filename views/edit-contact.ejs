<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Edit Data ticket</h2>
      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <form method="post" action="/tickets?_method=PUT">
        <input type="hidden" name="id" value="<%= ticket.id %>" />
        <input
          type="hidden"
          name="oldName"
          value="<%= (ticket.Oldname) ? ticket.Oldname : ticket.name %>"
        />
        <div class="mb-3">
          <label for="name" class="form-label">Nama</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            required
            value="<%= ticket.name %>"
          />
        </div>
        <div class="mb-3">
          <label for="nohp" class="form-label">Nomor HP</label>
          <input
            type="text"
            class="form-control"
            id="nohp"
            name="nohp"
            required
            value="<%= ticket.nohp %>"
          />
        </div>
        <div class="mb-3">
          <label for="id" class="form-label">ID/NIK</label>
          <input
            type="id"
            class="form-control"
            id="id"
            name="id"
            required
            value="<%= ticket.id %>"
          />
        </div>
        <button type="submit" class="btn btn-primary">Edit Data Ticket</button>
      </form>
    </div>
  </div>
</div>
