<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Pemesanan Ticket</h2>
      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <form method="post" action="/tickets">
        <div class="mb-3">
          <label for="name" class="form-label">Nama</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            required
          />
        </div>
        <div class="mb-3">
          <label for="nohp" class="form-label">Nomor HP</label>
          <input
            type="text"
            class="form-control"
            id="nohp"
            name="nohp"
            required
          />
        </div>
        <div class="mb-3">
          <label for="id" class="form-label">ID/NIK</label>
          <input type="id" class="form-control" id="id" name="id" required />
        </div>
        <button type="submit" class="btn btn-primary">Tambah Ticket</button>
      </form>
    </div>
  </div>
</div>
