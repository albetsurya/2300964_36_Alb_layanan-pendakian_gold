<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Pemesanan Tiket</h2>

      <a href="/tickets/add" class="btn btn-primary mb-3">Booking Tiket</a>

      <% if (msg.length !== 0) { %>
      <div class="alert alert-success" role="alert"><%= msg %></div>
      <% } %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">No HP</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (tickets.length === 0) { %>

          <tr>
            <td colspan="4">
              <div class="alert alert-danger fw.bold" role="alert">
                Data contact masih kosong.
              </div>
            </td>
          </tr>
          <% } %> <% tickets.forEach((ticket, i) => { i++ %>
          <tr>
            <th scope="row"><%= i++ %></th>
            <td><%= ticket.name %></td>
            <td><%= ticket.nohp %></td>
            <td>
              <a
                href="tickets/<%= ticket.name %>"
                class="btn btn-success badge rounded-pill"
                ><i class="bi bi-info-circle"></i> detail</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
